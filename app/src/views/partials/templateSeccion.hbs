{{> navigation}}

{{#each data}}
<div class="wrapper">
  <div class="main_content">
    <div class="col-3">
      <div id="seccionautornota">
        <img id="fotoautornota" src="/img/fotoperfil.jpg">
        <div id="centrar">
          <h5 id="textoautornota">Publicado por</h5>
          <h5 id="textoautornota">{{username}} {{userlasts}}</h5>
          <h5 id="textoautornota">03/11/2021</h5>
          <h5 id="textoautornota">01:12 p.m.</h5>
        </div>
      </div>
      <div>
        <div id="socialfb" class="fb-page" data-href="https://www.facebook.com/unioneslogro/" data-tabs="timeline"
          data-width="" data-height="" data-small-header="true" data-adapt-container-width="true"
          data-hide-cover="false" data-show-facepile="true">
          <blockquote cite="https://www.facebook.com/unioneslogro/" class="fb-xfbml-parse-ignore"><a
              href="https://www.facebook.com/unioneslogro/">Uni√≥n es logro</a></blockquote>
        </div>
      </div>
    </div>
    <div class="col-7  pre-text-wrap">



      <div class="container" id="noticia_content" border-width="5px">
        <div class="container">
          <h3 id="titulonota">{{titulo}}</h3>
        </div>

        <div id="myCarousel" class="container">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/img/noticias-imagenes/{{id_noticia}}/{{main_image}}" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/img/noticias-imagenes/{{id_noticia}}/{{extra_image1}}" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/img/noticias-imagenes/{{id_noticia}}/{{extra_image2}}" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="/img/noticias-imagenes/{{id_noticia}}/{{extra_image3}}" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
              data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
              data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>

          </div>
        </div>

        <p id="notacontent">{{contenido}}</p>

        <p text="{{fuente_nombre}}"></p>
        <a text="{{fuente_link}}"></a>
        <h5>{{noticia_usuario_nombres}} {{noticia_usuario_apellidos}}</h5>
      </div>
    </div>

