{{> navigation}}
{{#if data}}
<div class="container" id="noticia_content" border-width="5px">
    <div class="container">
        <h3 id="titulonota">{{data.titulo}}</h3>
    </div>

    <div id="myCarousel" class="container" style="width: 55%; height:55%">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.main_image}}" class="d-block w-100"
                        alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.extra_image1}}" class="d-block w-100"
                        alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.extra_image2}}" class="d-block w-100"
                        alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.extra_image3}}" class="d-block w-100"
                        alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="container mx-auto">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <p id="notacontent">{{data.contenido}}</p>

        <p id="notacontent">{{data.fuente}}</p>
        <a id="notacontent" href="http://{{data.link}}">{{data.link}}</a>
        <h5 id="textoautor">{{data.username}} {{data.userlasts}}</h5>
        <P id="notacontent">{{data.fecha}}</P>
        <P id="notacontent">{{data.hora}}</P>
      </div>
      <div class="col"></div>
    </div>
  </div>
</div>
{{/if}}
{{> footer}}