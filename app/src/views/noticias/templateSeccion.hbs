{{> navigation}}


<div class="container">
  <img class="banner" src="/img/adbannerhor.jpg">
</div>
<br>
{{#each data}}
<div class="tag_content">
  <div class="container">
  <div class="row align-items-end">
    
      
        <div class="col">
          <div id="autorarea" class="container">
            <img id="fotoautornota" src="/img/fotoperfil.jpg">
            <div class="container">
              <h5 id="textoautor">Publicado por</h5>
              <h5 id="textoautor">{{username}} {{userlasts}}</h5>
              <h5 id="textoautor">{{fecha}}</h5>
              <h5 id="textoautor">{{hora}}</h5>
            </div>
          </div>
        </div>
      
        <div class="col-9">
          <div class="container" id="noticia_content" border-width="5px">
            <div class="container">
              <a href="/noticias/vernoticia/{{id_noticia}}"><h3 id="titulonota">{{titulo}}</h3></a>
            </div>

            <div id="myCarousel" class="container" style="width: 55%; height:55%">
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/img/noticias-imagenes/{{id_noticia}}/{{img0}}" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{id_noticia}}/{{img1}}" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{id_noticia}}/{{img2}}" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{id_noticia}}/{{img3}}" class="d-block w-100" alt="...">
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                  data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                  data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
          </div>
        </div>



    </div>

  </div>
  <div class="container mx-auto">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <p id="notacontent">{{contenido}}</p>

        <p id="notacontent">{{fuente}}</p>
        <a id="notacontent" href="http://{{link}}">{{link}}</a>
        <h5>{{noticia_usuario_nombres}} {{noticia_usuario_apellidos}}</h5>
      </div>
      <div class="col"></div>
    </div>
  </div>
</div>
<br>
<hr>


{{/each}}
{{> footer}}