<header>
  {{> navigation}}
  <h1 class="box_header page_margin_top">NOTICIAS {{tagval.nombre}}</h1>
</header>

<div class="row row-cols-1 row-cols-md-3 g-4">


  {{#each data}}
  <div class="col">
    <div class="card">
      <div class="card-header">
        <img id="imgseccionlista" style="width: 100%;" src="/img/noticias-imagenes/{{id_noticia}}/{{img0}}"
        class="card-img-top" alt="Imagen de Noticia...">
        <h5 id="titulo-inicio-lista" class="card-title"><a href="/noticias/vernoticia/{{id_noticia}}">{{titulo}}</a>
        </h5>
      </div>      
      <div id="nota" class="card-body">        
        <p class="card-text">{{contenido}}</p>
      </div>
      <div class="card-footer">
        <small class="text-muted">Publicado {{fecha}} {{hora}}</small>
      </div>
    </div>
  </div>
  {{/each}}
</div>

{{> footer}}