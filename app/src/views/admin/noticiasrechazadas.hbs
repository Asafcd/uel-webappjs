{{>sidebarAdmin}}
<header>
  <div class="container-fluid">
    <h1 id="elementos-izquierda"><img src="/img/logounion.png"> | Lista de Noticias {{tag}}</h1>
  </div>
</header>
<div class="wrapper">
  <div class="main_content">
    <div class="container">
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Titulo</th>
            <th scope="col">Estado</th>
            <th scope="col">Autor</th>
            <th scope="col">Razones</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr>
            <th scope="row">{{id_noticia}}</th>
            <td><a href="/admin/vernoticia/{{id_noticia}}">{{titulo}}</a></td>
            <td>{{estado}}</td>
            <td>{{nombres}} {{apellidos}}</td>
            <td>{{mensaje}}</td>
          </tr>
          {{/each}}


        </tbody>
      </table>
    </div>
  </div>
</div>