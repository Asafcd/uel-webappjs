{{>sidebarAdmin}}
<header>
  <div class="container-fluid">
    <h1 id="elementos-izquierda"><img src="/img/logounion.png"> | Lista de {{tag}}</h1>
  </div>
</header>
<div class="wrapper">
  <div class="main_content">
    <a type="button" class="btn btn-success" href="/admin/signup">Registrar nuevo</a>
    <div class="container">
      <table class="table">
        <thead class="table-dark">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Username</th>
            <th scope="col">Nombre Completo</th>
            <th scope="col">Rol</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr>
            <th scope="row">{{id_usuario}}</th>
            <td>{{username}}</td>
            <td>{{nombres}} {{apellidos}}</td>
            <td>Autor</td>
            <td>
                <a type="button" class="btn btn-info btn-sm" href="/admin/edituser/{{id_usuario}}">Editar</a>
                <a type="button" class="btn btn-danger btn-sm" href="/admin/removeuser/{{id_usuario}}"
                  onclick="return confirm('¿Está seguro de eliminar el Autor <{{username}}>? Esta acción no se puede deshacer');">Eliminar</a>
            </td>
          </tr>
          {{/each}}


        </tbody>
      </table>
    </div>
  </div>
</div>