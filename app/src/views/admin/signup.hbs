{{>sidebarAdmin}}
<header>
  <div class="container-fluid">
    <h1 id="elementos-izquierda"><img src="/img/logounion.png"> | Registro de usuario nuevo</h1>
  </div>
</header>
<div class="wrapper">
    <div class="main_content">
        <div class="container col-md-4 text-left">
            <div class="card bg-light">
                <div class="card-header bg-dark text-white">Todos los campos son requeridos</div>
                    <form id="formautor" action="/admin/signup" method="POST">
                        <div class="card-body">
                            <div class="container mb-3">
                                <div class="form-floating mb-1">
                                    <input required type="text" class="form-control" id="names" name="names" placeholder="...">
                                    <label class="form-label-sm" for="names">Nombres:</label>
                                </div>
                                <br>
                                <div class="form-floating mb-1">
                                    <input required type="text" class="form-control" id="lasts" name="lasts" placeholder="...">
                                    <label class="form-label-sm" for="lasts">Apellidos:</label>
                                </div>
                                <br>
                                <div class="form-floating mb-1">
                                    <input required type="text" class="form-control" placeholder="" name="username" id="username" />
                                    <label class="form-label-sm" for="username">Username:</label>
                                </div>
                                <br>
                                <div class="form-floating mb-1">
                                    <input required type="password" class="form-control" id="password" name="password" placeholder="...">
                                    <label class="form-label-sm" for="password">Password:</label>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-end bg-dark">
                            <div class="mb-3">
                                <button id="btnsubmit" class="btn btn-primary btn-sm text-center" type='submit'>Guardar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>  
        </div>        
    </div>
</div>