
<div class="wrapper">
{{>sidebar}}
  <div class="main_content">
    <hr>
    <h3>{{data.titulo}}</h3>
    <div id="myCarousel" class="container" style="width: 55%; height:55%">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.img0}}" class="d-block w-100"
                        alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.img1}}" class="d-block w-100"
                        alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.img2}}" class="d-block w-100"
                        alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.img3}}" class="d-block w-100"
                        alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <p>{{data.contenido}}</p>

    <p></p>
    
   <h5>FUENTE: <a href="http://{{data.link}}" target="_blank">{{data.fuente}}</a></h5>
    
    <h5> AUTOR ORIGINAL: {{data.autor}} </h5>
    <h5> AUTOR UNLO: {{data.username}} {{data.userlasts}}</h5>
    <a class="btn btn-success btn-lg" href="/user/enviarnoticia/{{data.id_noticia}}"> Enviar </a>
    <a class="btn btn-info btn-lg" href="/user/editnoticia/{{data.id_noticia}}"> Editar </a>
  </div>
</div>