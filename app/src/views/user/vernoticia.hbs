
{{>navigation}}
<div class="wrapper">
{{>sidebar}}
  <div class="main_content">
    <hr>
    <h3>{{data.titulo}}</h3>
    <div id="myCarousel" class="container" style="width: 55%; height:55%">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.main_image}}" class="d-block w-100"
                        alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.extra_image1}}" class="d-block w-100"
                        alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.extra_image2}}" class="d-block w-100"
                        alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/img/noticias-imagenes/{{data.id_noticia}}/{{data.extra_image3}}" class="d-block w-100"
                        alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <p>{{data.contenido}}</p>

    <p></p>
    {{#each fuente}}
    <a href="http://{{link}}" target="_blank"><p>{{nombre}}</p></a>
    {{/each}}
    <h5> AUTOR: {{autor.nombres}} {{autor.apellidos}}</h5>
    <a class="btn btn-success btn-sm" href="/user/enviar/{{data.id_noticia}}"> Enviar </a>
  </div>
</div>