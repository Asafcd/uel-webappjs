{{>sidebar}}
<header>
    <div class="container-fluid">
        <h1 id="elementos-izquierda"><img src="/img/logounion.png">  |  Lista de Noticias Rechazadas</h1>
    </div>
</header>
<div class="wrapper">  
  <div class="main_content">
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Titulo</th>
          <th scope="col">Estado</th>
          <th scope="col">Autor</th>
          <th scope="col">Razones</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <th scope="row">{{id_noticia}}</th>
          <td><a href="/user/vernoticia/{{id_noticia}}">{{titulo}}</a></td>
          <td>{{estado}}</td>
          <td>{{nombres}} {{apellidos}}</td>
          <td>{{mensaje}}</td>
          <td>
            <a class="btn btn-info btn-sm" href="/user/editnoticia/{{id_noticia}}">Modificar</a>
            <a class="btn btn-danger btn-sm" href="/user/deletenoticia/{{id_noticia}}">Eliminar</a>
          </td>
        </tr>
        {{/each}}


      </tbody>
    </table>
  </div>
</div>